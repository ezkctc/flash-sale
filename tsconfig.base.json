{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@flash-sale/source"],
    "baseUrl": ".",
    "paths": {
      "@shared/types": ["libs/shared-types/src/index.ts"],
      "@shared/utils": ["libs/shared-utils/src/index.ts"],
      "@shared/config": ["libs/shared-config/src/index.ts"],
      "@shared/ui": ["libs/shared-ui/src/index.ts"]
    }
  }
}
