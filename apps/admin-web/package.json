{
  "name": "@flash-sale/admin-web",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/next:build",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "root": "apps/admin-web",
          "outputPath": "dist/apps/admin-web"
        },
        "configurations": {
          "development": {},
          "production": {}
        }
      },
      "serve": {
        "executor": "@nx/next:server",
        "defaultConfiguration": "development",
        "options": {
          "buildTarget": "@flash-sale/admin-web:build",
          "dev": true,
          "port": 4200,
          "hostname": "localhost"
        },
        "configurations": {
          "development": {
            "buildTarget": "@flash-sale/admin-web:build:development"
          },
          "production": {
            "buildTarget": "@flash-sale/admin-web:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "next": "~15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
